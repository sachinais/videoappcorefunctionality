<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_marginRight="10sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_back"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="2.5">
            <EditText
                android:id="@+id/txt_job_title"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="35sp"
                android:ems="10"
                android:inputType="textCapWords"
                android:textSize="20sp"
                android:paddingLeft="5sp"
                android:background="@drawable/rounded_edittext"
                style="@style/EditTextStyle"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_edit_video_page_logo"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img_thumb_video1"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_tutorial"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="15sp"
                    android:background="#000"
                    android:layout_alignLeft="@id/img_thumb_video1"
                    android:layout_alignRight="@id/img_thumb_video1"
                    android:layout_alignBottom="@id/img_thumb_video1"
                    android:alpha="0.7"> </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15sp"
                    android:textSize="10sp"
                    android:text="@string/label_thumbnail"
                    android:gravity="center"
                    android:textColor="#FFF"
                    android:layout_alignLeft="@id/img_thumb_video1"
                    android:layout_alignRight="@id/img_thumb_video1"
                    android:layout_alignBottom="@id/img_thumb_video1">
                </TextView>
            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img_thumb_video2"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_tutorial"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="15sp"
                    android:background="#000"
                    android:layout_alignLeft="@id/img_thumb_video2"
                    android:layout_alignRight="@id/img_thumb_video2"
                    android:layout_alignBottom="@id/img_thumb_video2"
                    android:alpha="0.7"> </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15sp"
                    android:textSize="10sp"
                    android:text="@string/label_top"
                    android:gravity="center"
                    android:textColor="#FFF"
                    android:layout_alignLeft="@id/img_thumb_video2"
                    android:layout_alignRight="@id/img_thumb_video2"
                    android:layout_alignBottom="@id/img_thumb_video2">
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img_thumb_video3"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_tutorial"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="15sp"
                    android:background="#000"
                    android:layout_alignLeft="@id/img_thumb_video3"
                    android:layout_alignRight="@id/img_thumb_video3"
                    android:layout_alignBottom="@id/img_thumb_video3"
                    android:alpha="0.7"> </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15sp"
                    android:textSize="10sp"
                    android:text="@string/label_tail"
                    android:gravity="center"
                    android:textColor="#FFF"
                    android:layout_alignLeft="@id/img_thumb_video3"
                    android:layout_alignRight="@id/img_thumb_video3"
                    android:layout_alignBottom="@id/img_thumb_video3">
                </TextView>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="2.5">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.nick.sampleffmpeg.ui.view.StretchVideoView
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25sp"
                    android:layout_centerHorizontal="true"/>
                <LinearLayout
                    android:id="@+id/video_view_tap_area"
                    android:background="#FFF"
                    android:alpha="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/video_view"
                    android:layout_alignRight="@id/video_view"
                    android:layout_alignTop="@id/video_view"
                    android:layout_alignBottom="@id/video_view"
                    android:orientation="vertical">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/video_view"
                    android:layout_alignRight="@id/video_view"
                    android:layout_alignTop="@id/video_view"
                    android:layout_alignBottom="@id/video_view"
                    android:orientation="vertical">

                    <com.nick.sampleffmpeg.ui.view.OverlayView
                        layout="@layout/overlay_layout"
                        android:id="@+id/overlay_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </com.nick.sampleffmpeg.ui.view.OverlayView>

                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/video_control_layout"
                    android:layout_width="match_parent"
                    android:layout_height="25sp"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true">

                    <ImageView
                        android:id="@+id/btn_previous"
                        android:layout_marginRight="30sp"
                        android:scaleType="fitCenter"
                        android:layout_width="37sp"
                        android:layout_height="25sp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/btn_previous"/>

                    <ImageView
                        android:id="@+id/btn_play"
                        android:layout_toRightOf="@id/btn_previous"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:layout_marginRight="30sp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/btn_play"/>

                    <ImageView
                        android:id="@+id/btn_next"
                        android:layout_toRightOf="@id/btn_play"
                        android:layout_width="37sp"
                        android:layout_height="25sp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/btn_next"/>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5sp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/thumb_layout4"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_thumb_video4"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_tutorial"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="15sp"
                    android:background="#000"
                    android:layout_alignLeft="@id/img_thumb_video4"
                    android:layout_alignRight="@id/img_thumb_video4"
                    android:layout_alignBottom="@id/img_thumb_video4"
                    android:alpha="0.7"> </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15sp"
                    android:textSize="10sp"
                    android:text="@string/label_tutorial"
                    android:gravity="center"
                    android:textColor="#FFF"
                    android:layout_alignLeft="@id/img_thumb_video4"
                    android:layout_alignRight="@id/img_thumb_video4"
                    android:layout_alignBottom="@id/img_thumb_video4">
                </TextView>
            </RelativeLayout>

            <TextView
                android:id="@+id/txtLabel1"
                android:layout_below="@id/thumb_layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="10sp"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#000"
                android:text="@string/edit_your_video"/>

            <TextView
                android:layout_below="@id/txtLabel1"
                android:id="@+id/txtLabel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:textSize="10sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="5sp"
                android:text="@string/edit_video_description"/>

            <TextView
                android:id="@+id/txt_video_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="#000"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:textSize="10sp"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Total Length: 1min 24sec"/>

            <ImageView
                android:layout_below="@id/txtLabel2"
                android:layout_above="@id/txt_video_duration"
                android:id="@+id/btn_encode_video"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_encode_video"/>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="5sp"
        android:id="@+id/timeline_layout"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:background="#EEE"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/left_timeline_icon_layout"
            android:layout_width="40sp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:background="@drawable/timeline_icon_area"
                android:layout_weight="1">

                <ImageView
                    android:layout_margin="7sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_video_timeline"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:background="@drawable/timeline_icon_area"
                android:layout_weight="1">
                <ImageView
                    android:layout_margin="7sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_title_timeline"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:background="#909090"
                android:layout_weight="1">
                <ImageView
                    android:layout_margin="7sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_audio_timeline"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/left_sidebar_layout"
            android:layout_toRightOf="@id/left_timeline_icon_layout"
            android:layout_width="40sp"
            android:background="#000"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/redo_trim_left"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:layout_width="20sp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/btn_slide_left"/>
            <ImageView
                android:id="@+id/trim_left"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:layout_width="20sp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/btn_slide_right"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/right_sidebar_layout"
            android:layout_width="40sp"
            android:layout_height="match_parent"
            android:background="#000"
            android:layout_marginRight="1sp"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/trim_right"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:layout_width="20sp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/btn_slide_left"/>
            <ImageView
                android:id="@+id/redo_trim_right"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:layout_width="20sp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/btn_slide_right"/>
        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/scrollview_timeline"
            android:layout_toRightOf="@id/left_sidebar_layout"
            android:layout_toLeftOf="@id/right_sidebar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#EEE">

                    <LinearLayout
                        android:id="@+id/timeline_video_thumbs_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="0sp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <com.nick.sampleffmpeg.ui.view.TitleTimeLayout
                        android:id="@+id/timeline_title_thumbs_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="1"
                        android:paddingTop="0sp"
                        android:paddingBottom="2sp"
                        android:background="#000000">

                        <TextView
                            android:id="@+id/txt_hint_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:background="#404040"
                            android:textColor="#696969"
                            android:text="@string/label_add_text_to_timeline"/>
                    </com.nick.sampleffmpeg.ui.view.TitleTimeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:background="#454545"
                        android:layout_weight="1">
                        <com.nick.sampleffmpeg.ui.view.WaveformView
                            android:id="@+id/wavform_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/video_trim_left_view"
                    android:layout_width="10sp"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:background="#000"></View>

                <View
                    android:id="@+id/video_trim_right_view"
                    android:layout_width="10sp"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:background="#000"></View>

                <View
                    android:id="@+id/video_indicator"
                    android:layout_width="10sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/video_indicator">

                </View>

            </FrameLayout>
        </HorizontalScrollView>

    </RelativeLayout>
</LinearLayout>