<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.nick.sampleffmpeg.ui.view.StretchVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:id="@+id/video_view_tap_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/video_view"
        android:layout_alignRight="@id/video_view"
        android:layout_alignTop="@id/video_view"
        android:layout_alignBottom="@id/video_view"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/img_preview"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_preview"/>
    </RelativeLayout>
</RelativeLayout>